{
    "name": "colorshades",
    "version": "1.0.0-alpha.2",
    "description": "Making shades from a single color as never been easier",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "repository": "https://github.com/hugovntr/colorshades.git",
    "bugs": "https://github.com/hugovntr/colorshades/issues",
    "author": "Hugo Ventura",
    "license": "MIT",
    "prettier": {
        "useTabs": false,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsc --build",
        "types": "tsc src/index.ts --declaration --emitDeclarationOnly --declarationDir dist/types --esModuleInterop",
        "boundaries": "ts-node -O '{\"module\":\"commonjs\"}' scripts/boundaries.ts"
    },
    "engines": {
        "node": ">=12.13.0"
    },
    "devDependencies": {
        "tailwindcss": "^2.2.17",
        "ts-node": "^10.4.0",
        "typescript": "^4.4.4"
    }
}
